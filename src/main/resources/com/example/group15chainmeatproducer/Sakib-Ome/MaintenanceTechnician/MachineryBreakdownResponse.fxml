<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.SakibOme.MaintenanceTechnician.MachineryBreakdownResponseController"
            prefHeight="720.0" prefWidth="1000.0">
    <children>
        <Label text="Machinery Breakdown Response" style="-fx-font-size: 20px; -fx-font-weight: bold;"
               AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="14.0"/>

        <VBox spacing="12.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label text="Alert Details" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="alertIdField" promptText="Alert ID"/>
                        <Button fx:id="viewAlertButton" text="View Alert"/>
                    </children>
                </HBox>

                <Label text="Breakdown Details" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableView fx:id="breakdownTable" prefHeight="260.0">
                    <columns>
                        <TableColumn fx:id="colMachineId" text="Machine ID" prefWidth="160.0"/>
                        <TableColumn fx:id="colAlertType" text="Alert Type" prefWidth="200.0"/>
                        <TableColumn fx:id="colTimeReported" text="Time Reported" prefWidth="200.0"/>
                        <TableColumn fx:id="colCurrentStatus" text="Current Status" prefWidth="200.0"/>
                    </columns>
                </TableView>

                <Label text="Update Response" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextArea fx:id="actionTakenArea" promptText="Action Taken" prefRowCount="4" wrapText="true"/>
                <ComboBox fx:id="statusUpdateCombo" promptText="Status Update"/>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="processResponseButton" text="Process Response"/>
                        <Button fx:id="validateButton" text="Validate Response Data"/>
                        <Button fx:id="backButton" text="Back to Menu" onAction="#onBackToMenu"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
