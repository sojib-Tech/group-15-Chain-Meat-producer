<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.SakibOme.MaintenanceTechnician.EmergencyRepairsController"
            prefHeight="720.0" prefWidth="1000.0">
    <children>
        <Label text="Emergency Repairs" style="-fx-font-size: 20px; -fx-font-weight: bold;"
               AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="14.0"/>

        <VBox spacing="12.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label text="Select Machine / Alert" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="machineIdField" promptText="Machine ID"/>
                        <Button fx:id="fetchAlertButton" text="Fetch Alert"/>
                    </children>
                </HBox>

                <Label text="Machine &amp; Alert Details" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableView fx:id="alertTable" prefHeight="260.0">
                    <columns>
                        <TableColumn fx:id="colMachineId" text="Machine ID" prefWidth="160.0"/>
                        <TableColumn fx:id="colIssueReported" text="Issue Reported" prefWidth="240.0"/>
                        <TableColumn fx:id="colPriority" text="Priority Level" prefWidth="160.0"/>
                        <TableColumn fx:id="colCurrentStatus" text="Current Status" prefWidth="200.0"/>
                    </columns>
                </TableView>

                <Label text="Emergency Repair Details" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="repairStatusCombo" promptText="Repair Status"/>
                <TextArea fx:id="repairNotesArea" promptText="Repair Notes" prefRowCount="4" wrapText="true"/>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="processButton" text="Process Emergency Repair"/>
                        <Button fx:id="validateButton" text="Validate Emergency Data"/>
                        <Button fx:id="backButton" text="Back to Menu" onAction="#onBackToMenu"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
