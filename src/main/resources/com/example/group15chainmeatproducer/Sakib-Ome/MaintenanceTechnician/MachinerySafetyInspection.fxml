<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.SakibOme.MaintenanceTechnician.MachinerySafetyInspectionController"
            prefHeight="760.0" prefWidth="1000.0">
    <children>
        <Label text="Machinery Safety Inspection"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="14.0"/>

        <VBox spacing="12.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label text="Validate Safety Data" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Button fx:id="runValidationButton" text="Run Safety Validation" onAction="#onRunSafetyValidation"/>

                <Label text="Find Machine for Inspection" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="machineIdField" promptText="Machine ID"/>
                        <Button fx:id="inspectButton" text="Inspect Machine" onAction="#onInspectMachine"/>
                    </children>
                </HBox>

                <Label text="Inspection Results" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableView fx:id="inspectionTable" prefHeight="280.0">
                    <columns>
                        <TableColumn fx:id="colMachineId" text="Machine ID" prefWidth="140.0"/>
                        <TableColumn fx:id="colMachineName" text="Machine Name" prefWidth="180.0"/>
                        <TableColumn fx:id="colInspectionDate" text="Inspection Date" prefWidth="160.0"/>
                        <TableColumn fx:id="colSafetyStatus" text="Safety Status" prefWidth="160.0"/>
                        <TableColumn fx:id="colInspectorName" text="Inspector Name" prefWidth="160.0"/>
                        <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="220.0"/>
                    </columns>
                </TableView>

                <Label text="Update Safety Records" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10.0">
                    <children>
                        <ComboBox fx:id="safetyStatusCombo" promptText="Safety Status"/>
                        <DatePicker fx:id="nextInspectionPicker" promptText="Next Inspection Date"/>
                    </children>
                </HBox>
                <TextArea fx:id="notesArea" promptText="Notes / Recommendations" prefRowCount="4" wrapText="true"/>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" text="Save Safety Record" onAction="#onSaveSafetyRecord"/>
                        <Button fx:id="backButton" text="Back to Menu" onAction="#onBackToMenu"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
