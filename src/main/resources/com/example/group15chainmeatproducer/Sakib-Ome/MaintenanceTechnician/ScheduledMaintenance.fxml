<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="760.0" prefWidth="1122.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group15chainmeatproducer.SakibOme.MaintenanceTechnician.ScheduledMaintenanceController">
    <children>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Scheduled Maintenance Management" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="14.0" />

        <VBox spacing="12.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Find Machine for Maintenance" />
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="machineIdField" promptText="Machine ID" />
                        <Button fx:id="searchButton" onAction="#onSearchMachine" text="Search Machine" />
                    </children>
                </HBox>

                <TableView fx:id="machineTable" prefHeight="280.0">
                    <columns>
                        <TableColumn fx:id="colMachineId" prefWidth="140.0" text="Machine ID" />
                        <TableColumn fx:id="colMachineName" prefWidth="180.0" text="Machine Name" />
                        <TableColumn fx:id="colLastMaintenance" prefWidth="180.0" text="Last Maintenance Date" />
                        <TableColumn fx:id="colNextScheduled" prefWidth="200.0" text="Next Scheduled Maintenance" />
                        <TableColumn fx:id="colTechnician" prefWidth="180.0" text="Assigned Technician" />
                        <TableColumn fx:id="colStatus" prefWidth="180.0" text="Maintenance Status" />
                    </columns>
                </TableView>

                <Button fx:id="validateButton" onAction="#onValidateMaintenanceData" text="Validate Maintenance Data" />

                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Update Maintenance Record" />
                <HBox spacing="10.0">
                    <children>
                        <DatePicker fx:id="maintenanceDatePicker" promptText="Maintenance Date" />
                        <ComboBox fx:id="maintenanceTypeCombo" promptText="Maintenance Type" />
                    </children>
                </HBox>
                <TextArea fx:id="notesArea" prefRowCount="4" promptText="Notes / Work Performed" wrapText="true" />

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="processButton" onAction="#onProcessMaintenanceRecord" text="Process Maintenance Record" />
                        <Button fx:id="backButton" onAction="#onBackToMenu" text="Back to Menu" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
