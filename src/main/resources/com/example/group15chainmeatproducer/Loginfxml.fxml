<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.LoginController"
            prefHeight="300.0" prefWidth="500.0">

    <VBox alignment="CENTER" spacing="30.0" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="100.0"
          AnchorPane.rightAnchor="100.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="Meat Producer&#10;Login Page"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-text-alignment: center;"/>

        <VBox spacing="15.0" alignment="CENTER">
            <ComboBox fx:id="userTypeComboBox" prefWidth="250.0" promptText="Choose your role..."
                      style="-fx-font-size: 14px;" maxWidth="250.0"/>

            <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirm" prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        </VBox>
    </VBox>

</AnchorPane>
