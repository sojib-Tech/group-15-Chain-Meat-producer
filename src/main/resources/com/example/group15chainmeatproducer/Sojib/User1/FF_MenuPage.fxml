<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Sojib.User1.FFMenuController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Button fx:id="backButton" onAction="#handleBack" text="â† Logout"/>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                       text="Factory Floor Worker Dashboard"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </HBox>

        <GridPane hgap="20" vgap="20">
            <children>
                <Button fx:id="goal1Button" onAction="#handleGoal1" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="1. Scan Animal ID Before Slaughter" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                <Button fx:id="goal2Button" onAction="#handleGoal2" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="2. Upload Hygiene Checklist" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Button fx:id="goal3Button" onAction="#handleGoal3" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="3. Confirm Meat Cutting Machine Calibration" GridPane.columnIndex="0"
                        GridPane.rowIndex="1"/>

                <Button fx:id="goal4Button" onAction="#handleGoal4" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="4. Input Number of Cut Meat Pieces" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Button fx:id="goal5Button" onAction="#handleGoal5" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="5. Upload Tray Photo for QC" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                <Button fx:id="goal6Button" onAction="#handleGoal6" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="6. Select Packaging Material" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Button fx:id="goal7Button" onAction="#handleGoal7" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="7. Record Cold Storage Entry Time" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                <Button fx:id="goal8Button" onAction="#handleGoal8" prefHeight="80.0" prefWidth="300.0"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="8. Mark Shift Handover" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
        </GridPane>
    </children>
</VBox>