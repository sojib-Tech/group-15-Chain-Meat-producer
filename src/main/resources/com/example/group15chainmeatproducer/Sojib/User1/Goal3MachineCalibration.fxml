<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.group15chainmeatproducer.Sojib.User1.MachineCalibrationController">
    <children>
        <Label layoutX="280.0" layoutY="20.0" prefHeight="34.0" prefWidth="240.0" text="Machine Calibration">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <TextField fx:id="machineIdField" layoutX="100.0" layoutY="80.0" promptText="Machine ID"/>
        <ComboBox fx:id="calibrationStatusComboBox" layoutX="300.0" layoutY="80.0" prefWidth="150.0"
                  promptText="Calibration Status"/>
        <DatePicker fx:id="calibrationDatePicker" layoutX="480.0" layoutY="80.0"/>

        <Button fx:id="btnBack" layoutX="50.0" layoutY="30.0" onAction="#handleBack" prefHeight="30.0" prefWidth="80.0"
                text="Back"/>
        <Button fx:id="btnSaveLog" layoutX="350.0" layoutY="130.0" onAction="#handleSaveLog" prefHeight="35.0"
                prefWidth="100.0" text="Save Log"/>

        <TableView fx:id="machineCalibrationTable" layoutX="50.0" layoutY="200.0" prefHeight="350.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="colMachineId" prefWidth="233.0" text="Machine ID"/>
                <TableColumn fx:id="colCalibrationStatus" prefWidth="233.0" text="Calibration Status"/>
                <TableColumn fx:id="colCalibrationDate" prefWidth="234.0" text="Calibration Date"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>