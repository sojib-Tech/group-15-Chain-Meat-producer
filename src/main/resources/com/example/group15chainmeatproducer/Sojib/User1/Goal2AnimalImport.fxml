<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.group15chainmeatproducer.Sojib.User1.AnimalImportController">
    <children>
        <Label layoutX="300.0" layoutY="20.0" prefHeight="34.0" prefWidth="200.0" text="Animal Import">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <TextField fx:id="animalIdField" layoutX="50.0" layoutY="80.0" promptText="Animal ID"/>
        <TextField fx:id="animalTypeField" layoutX="220.0" layoutY="80.0" promptText="Animal Type"/>
        <ComboBox fx:id="countryComboBox" layoutX="390.0" layoutY="80.0" prefWidth="150.0"
                  promptText="Country of Import"/>
        <DatePicker fx:id="importDatePicker" layoutX="560.0" layoutY="80.0"/>

        <Button fx:id="btnBack" layoutX="50.0" layoutY="30.0" onAction="#handleBack" prefHeight="30.0" prefWidth="80.0"
                text="Back"/>
        <Button fx:id="btnSubmit" layoutX="350.0" layoutY="130.0" onAction="#handleSubmit" prefHeight="35.0"
                prefWidth="100.0" text="Submit"/>

        <TableView fx:id="animalImportTable" layoutX="50.0" layoutY="200.0" prefHeight="350.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="colAnimalId" prefWidth="175.0" text="Animal ID"/>
                <TableColumn fx:id="colAnimalType" prefWidth="175.0" text="Animal Type"/>
                <TableColumn fx:id="colCountryOfImport" prefWidth="175.0" text="Country of Import"/>
                <TableColumn fx:id="colImportDate" prefWidth="175.0" text="Import Date"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>