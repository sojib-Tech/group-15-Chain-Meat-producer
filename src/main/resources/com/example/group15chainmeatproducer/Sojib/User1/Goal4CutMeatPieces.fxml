<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.group15chainmeatproducer.Sojib.User1.CutMeatPiecesController">
    <children>
        <Label layoutX="280.0" layoutY="20.0" prefHeight="34.0" prefWidth="240.0" text="Cut Meat Pieces">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <TextField fx:id="animalIdField" layoutX="150.0" layoutY="80.0" promptText="Animal ID"/>
        <TextField fx:id="numberOfPiecesField" layoutX="350.0" layoutY="80.0" promptText="Number of Pieces"/>
        <DatePicker fx:id="cuttingDatePicker" layoutX="550.0" layoutY="80.0"/>

        <Button fx:id="btnBack" layoutX="50.0" layoutY="30.0" onAction="#handleBack" prefHeight="30.0" prefWidth="80.0"
                text="Back"/>
        <Button fx:id="btnSubmit" layoutX="350.0" layoutY="130.0" onAction="#handleSubmit" prefHeight="35.0"
                prefWidth="100.0" text="Submit"/>

        <TableView fx:id="cutMeatPiecesTable" layoutX="50.0" layoutY="200.0" prefHeight="350.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="colAnimalId" prefWidth="233.0" text="Animal ID"/>
                <TableColumn fx:id="colNumberOfPieces" prefWidth="233.0" text="Number of Pieces"/>
                <TableColumn fx:id="colCuttingDate" prefWidth="234.0" text="Cutting Date"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>