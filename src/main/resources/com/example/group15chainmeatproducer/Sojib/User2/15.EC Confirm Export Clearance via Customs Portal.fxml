<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.Sojib.User2.ECConfirmExportClearanceViaCustomsPortal"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label layoutX="180.0" layoutY="20.0" text="Confirm Export Clearance via Customs Portal"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <TextField layoutX="50.0" layoutY="80.0" promptText="Customs Reference Number" prefWidth="250.0"/>
        <TextField layoutX="350.0" layoutY="80.0" promptText="Clearance Status" prefWidth="200.0"/>

        <TextArea layoutX="50.0" layoutY="130.0" promptText="Customs Notes"
                  prefWidth="500.0" prefHeight="100.0"/>

        <Button layoutX="200.0" layoutY="260.0" text="Confirm Clearance" prefWidth="140.0"/>
        <Button layoutX="360.0" layoutY="260.0" text="Check Status" prefWidth="100.0"/>

        <Button fx:id="btnBack" layoutX="50.0" layoutY="350.0" text="Back"
                onAction="#handleBack" prefWidth="80.0"/>
    </children>
</AnchorPane>
