<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.group15chainmeatproducer.Sojib.User2.DestinationClientController">
    <children>
        <Label layoutX="260.0" layoutY="20.0" prefHeight="34.0" prefWidth="280.0"
               text="Input Destination and Client Name">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>

        <ComboBox fx:id="destinationCountryComboBox" layoutX="120.0" layoutY="80.0" prefWidth="180.0"
                  promptText="Destination Country"/>
        <TextField fx:id="clientCompanyField" layoutX="320.0" layoutY="80.0" prefWidth="180.0"
                   promptText="Client Company Name"/>
        <DatePicker fx:id="entryDatePicker" layoutX="520.0" layoutY="80.0"/>

        <Button fx:id="btnBack" layoutX="50.0" layoutY="30.0" onAction="#handleBack" prefHeight="30.0" prefWidth="80.0"
                text="Back"/>
        <Button fx:id="btnSave" layoutX="350.0" layoutY="130.0" onAction="#handleSaveInformation" prefHeight="35.0"
                prefWidth="100.0" text="Save Information"/>

        <TableView fx:id="destinationClientTable" layoutX="50.0" layoutY="200.0" prefHeight="350.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="colDestinationCountry" prefWidth="233.0" text="Destination Country"/>
                <TableColumn fx:id="colClientCompany" prefWidth="233.0" text="Client Company"/>
                <TableColumn fx:id="colEntryDate" prefWidth="234.0" text="Entry Date"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>