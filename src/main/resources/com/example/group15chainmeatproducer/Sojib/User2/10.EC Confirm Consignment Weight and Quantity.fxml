        <Label fx:id="orderDetailsLabel" layoutX="94.0" layoutY="127.0" prefWidth="508.0"
               prefHeight="254.0" text="Order details will appear here." wrapText="true" />

        <TextField fx:id="packageCountField" layoutX="142.0" layoutY="399.0" promptText="Package Count" />
        <TextField fx:id="totalWeightField" layoutX="406.0" layoutY="404.0" promptText="Total Weight" />

        <Button layoutX="305.0" layoutY="452.0" text="SUBMIT" onAction="#submit" prefWidth="128.0" />
        <Button fx:id="btnBack" layoutX="14.0" layoutY="14.0" text="BACK" onAction="#back" />
    </children>
</AnchorPane>
