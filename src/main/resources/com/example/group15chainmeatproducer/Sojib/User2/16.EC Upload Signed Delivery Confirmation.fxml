<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.Sojib.User2.ECUploadSignedDeliveryConfirmation"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Upload Signed Delivery Confirmation"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <TextField layoutX="50.0" layoutY="80.0" promptText="Delivery Reference" prefWidth="200.0"/>
        <TextField layoutX="350.0" layoutY="80.0" promptText="Customer Name" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="130.0" text="Upload Signed Document:"/>
        <Button layoutX="50.0" layoutY="160.0" text="Choose File" prefWidth="120.0"/>
        <Label layoutX="200.0" layoutY="165.0" text="No file selected" style="-fx-text-fill: gray;"/>

        <TextArea layoutX="50.0" layoutY="200.0" promptText="Delivery Notes"
                  prefWidth="500.0" prefHeight="80.0"/>

        <Button layoutX="250.0" layoutY="300.0" text="Upload Confirmation" prefWidth="140.0"/>

        <Button fx:id="btnBack" layoutX="50.0" layoutY="350.0" text="Back"
                onAction="#handleBack" prefWidth="80.0"/>
    </children>
</AnchorPane>
