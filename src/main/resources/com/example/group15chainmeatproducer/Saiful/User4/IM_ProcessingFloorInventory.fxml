<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User4.IMProcessingFloorInventoryController">
    <children>
        <Label text="Processing Floor Inventory Monitor" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Shift &amp; Line:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Monitor Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Inventory Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton text="Normal"/>
                        <RadioButton text="Low Stock"/>
                    </children>
                </VBox>

                <Label text="Consumption Data:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Expected Usage:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
                    <columns>
                        <TableColumn text="Line ID"/>
                        <TableColumn text="Consumption"/>
                        <TableColumn text="Expected"/>
                        <TableColumn text="Status"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button text="Update Inventory"/>
                        <Button text="Alert Supervisor"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>