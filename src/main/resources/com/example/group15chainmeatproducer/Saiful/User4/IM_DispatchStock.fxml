<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User4.IMDispatchStockController">
    <children>
        <Label text="Dispatch Stock to Export Area" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Export Item:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="exportItemComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Dispatch Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dispatchDatePicker" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Dispatch Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton fx:id="scheduledRadio" text="Scheduled"/>
                        <RadioButton fx:id="dispatchedRadio" text="Dispatched"/>
                    </children>
                </VBox>

                <Label text="Loading Team:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="loadingTeamField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="quantityField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView fx:id="dispatchStockTable" prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5"
                           GridPane.columnSpan="2">
                    <columns>
                        <TableColumn fx:id="itemIdColumn" text="Item ID"/>
                        <TableColumn fx:id="quantityColumn" text="Quantity"/>
                        <TableColumn fx:id="teamColumn" text="Team"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="assignTeamButton" text="Assign Team" onAction="#handleAssignTeam"/>
                        <Button fx:id="confirmDispatchButton" text="Confirm Dispatch"
                                onAction="#handleConfirmDispatch"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>