<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User4.IMMenuController">
    <children>
        <Label text="Inventory Manager Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <VBox spacing="10" style="-fx-padding: 20;">
            <children>
                <Button fx:id="goal1Button" text="1. Raw Material Inventory" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal1"/>
                <Button fx:id="goal2Button" text="2. Processing Floor Inventory" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal2"/>
                <Button fx:id="goal3Button" text="3. Packaging Material Usage" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal3"/>
                <Button fx:id="goal4Button" text="4. Weekly Inventory Audit" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal4"/>
                <Button fx:id="goal5Button" text="5. Damaged/Expired Stock" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal5"/>
                <Button fx:id="goal6Button" text="6. Dispatch to Export Area" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal6"/>
                <Button fx:id="goal7Button" text="7. Monthly Stock Reports" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal7"/>
                <Button fx:id="goal8Button" text="8. Stock Reconciliation" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal8"/>
                <Button fx:id="backButton" text="Back to Main Menu" prefWidth="300" prefHeight="40"
                        onAction="#handleBack"/>
            </children>
        </VBox>
    </children>
</VBox>