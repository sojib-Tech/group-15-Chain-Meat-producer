<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User4.IMPackagingMaterialController">
    <children>
        <Label text="Packaging Material Usage Tracking" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Packing Batch:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Usage Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Material Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton text="Standard Usage"/>
                        <RadioButton text="Discrepancy Found"/>
                    </children>
                </VBox>

                <Label text="Material Issued:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Standard Usage:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
                    <columns>
                        <TableColumn text="Batch ID"/>
                        <TableColumn text="Issued"/>
                        <TableColumn text="Standard"/>
                        <TableColumn text="Status"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button text="Record Discrepancy"/>
                        <Button text="Notify Procurement"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>