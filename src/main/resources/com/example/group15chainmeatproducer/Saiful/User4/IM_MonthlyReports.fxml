<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User4.IMMonthlyReportsController">
    <children>
        <Label text="Monthly Stock Reports Generation" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Report Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="reportTypeComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Report Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="reportDatePicker" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Export Format:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton fx:id="excelRadio" text="Excel"/>
                        <RadioButton fx:id="pdfRadio" text="PDF"/>
                    </children>
                </VBox>

                <Label text="Category Filter:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="categoryFilterField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Date Filter:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="dateFilterField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView fx:id="monthlyReportTable" prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5"
                           GridPane.columnSpan="2">
                    <columns>
                        <TableColumn fx:id="reportTypeColumn" text="Report Type"/>
                        <TableColumn fx:id="categoryColumn" text="Category"/>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="generateReportButton" text="Generate Report" onAction="#handleGenerateReport"/>
                        <Button fx:id="shareReportButton" text="Share Report" onAction="#handleShareReport"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>