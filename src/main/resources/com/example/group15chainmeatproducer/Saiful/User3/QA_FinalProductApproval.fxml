<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User3.QAFinalProductApprovalController">
    <children>
        <Label text="Final Product Batch Approval" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Product Batch:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="productBatchComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Review Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="reviewDatePicker" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Approval Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton fx:id="approvedRadio" text="Approved"/>
                        <RadioButton fx:id="rejectedRadio" text="Rejected"/>
                    </children>
                </VBox>

                <Label text="Quality Records:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="qualityRecordsField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Decision Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="decisionNotesField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView fx:id="finalProductTable" prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5"
                           GridPane.columnSpan="2">
                    <columns>
                        <TableColumn fx:id="batchIdColumn" text="Batch ID"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="decisionColumn" text="Decision"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="submitApprovalButton" text="Submit Approval" onAction="#handleSubmitApproval"/>
                        <Button fx:id="notifyDispatchButton" text="Notify Dispatch" onAction="#handleNotifyDispatch"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>