<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User3.QAMenuController">
    <children>
        <Label text="Quality Assurance Officer Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <VBox spacing="10" style="-fx-padding: 20;">
