                        onAction="#handleGoal6"/>
                <Button fx:id="goal7Button" text="7. HACCP Compliance" prefWidth="300" prefHeight="40"
                        onAction="#handleGoal7"/>
                <Button fx:id="goal8Button" text="8. Final Product Approval" prefWidth="300" prefHeight="40"
