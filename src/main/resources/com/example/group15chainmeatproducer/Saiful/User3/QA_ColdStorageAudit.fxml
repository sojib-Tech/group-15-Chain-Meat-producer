<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User3.QAColdStorageAuditController">
    <children>
        <Label text="Cold Storage Temperature Logs Audit" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Storage Room:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="storageRoomComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Audit Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="auditDatePicker" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Temperature Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton fx:id="normalRadio" text="Normal"/>
                        <RadioButton fx:id="fluctuationRadio" text="Fluctuation"/>
                    </children>
                </VBox>

                <Label text="Temperature Reading:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="temperatureField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Audit Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="notesField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView fx:id="auditTable" prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5"
                           GridPane.columnSpan="2">
                    <columns>
                        <TableColumn fx:id="roomIdColumn" text="Room ID"/>
                        <TableColumn fx:id="temperatureColumn" text="Temperature"/>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="exportReportButton" text="Export Report" onAction="#handleExportReport"/>
                        <Button fx:id="submitVerificationButton" text="Submit Verification"
                                onAction="#handleSubmitVerification"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>