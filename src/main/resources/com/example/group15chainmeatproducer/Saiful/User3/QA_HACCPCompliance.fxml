<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User3.QAHACCPComplianceController">
    <children>
        <Label text="HACCP Compliance Points Monitor" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Control Point:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="controlPointComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Monitor Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="monitorDatePicker" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Compliance Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton fx:id="compliantRadio" text="Compliant"/>
                        <RadioButton fx:id="nonConformityRadio" text="Non-Conformity"/>
                    </children>
                </VBox>

                <Label text="Observation:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="observationField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Parameters:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="parametersField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView fx:id="haccpTable" prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5"
                           GridPane.columnSpan="2">
                    <columns>
                        <TableColumn fx:id="controlPointColumn" text="Control Point"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="notesColumn" text="Notes"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="submitComplianceButton" text="Submit Compliance"
                                onAction="#handleSubmitCompliance"/>
                        <Button fx:id="flagNonConformityButton" text="Flag Non-Conformity"
                                onAction="#handleFlagNonConformity"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>