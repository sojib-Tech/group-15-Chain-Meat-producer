<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group15chainmeatproducer.Saiful.User3.QAHygieneChecklistController">
    <children>
        <Label text="Hygiene Checklist Verification" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Cleaning Batch:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="cleaningBatchComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Verification Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="verificationDatePicker" prefWidth="200" GridPane.columnIndex="1"
                            GridPane.rowIndex="1"/>

                <Label text="Checklist Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton fx:id="completeRadio" text="Complete"/>
                        <RadioButton fx:id="incompleteRadio" text="Incomplete"/>
                    </children>
                </VBox>

                <Label text="Photo Upload:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="photoUploadField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="notesField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <TableView fx:id="hygieneTable" prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="5"
                           GridPane.columnSpan="2">
                    <columns>
                        <TableColumn fx:id="batchIdColumn" text="Batch ID"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="photoColumn" text="Photo"/>
                    </columns>
                </TableView>

                <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="uploadPhotoButton" text="Upload Photo" onAction="#handleUploadPhoto"/>
                        <Button fx:id="submitReportButton" text="Submit Report" onAction="#handleSubmitReport"/>
                        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>