<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group15chainmeatproducer.Ami.CustomerServiceRepresentative.UpdateOrderStatusController">

    <fx:define>
        <ToggleGroup fx:id="notifyGroup" />
    </fx:define>

    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Update Order Status" />

                <TextField fx:id="searchField" promptText="Search by Order ID or Customer Name" />

                <ComboBox fx:id="newStatusCombo" promptText="Select new status" />

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <RadioButton fx:id="notifyYesRadio" text="Notify Customer" toggleGroup="$notifyGroup"/>
                        <RadioButton fx:id="notifyNoRadio" text="Do Not Notify" toggleGroup="$notifyGroup" />
                    </children>
                </HBox>

                <DatePicker fx:id="expectedDatePicker" promptText="Expected delivery date (optional)" />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="updateStatusButton" defaultButton="true" text="Update Status" />
                        <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"/>
                    </children>
                </HBox>

                <TableView fx:id="ordersTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="orderIdCol" prefWidth="150.0" text="Order ID" />
                        <TableColumn fx:id="customerNameCol" prefWidth="250.0" text="Customer Name" />
                        <TableColumn fx:id="currentStatusCol" prefWidth="150.0" text="Current Status" />
                        <TableColumn fx:id="newStatusCol" prefWidth="150.0" text="New Status" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
