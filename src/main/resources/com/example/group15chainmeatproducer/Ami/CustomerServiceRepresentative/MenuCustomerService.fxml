<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.Ami.CustomerServiceRepresentative.MenuCustomerServiceController"
            prefHeight="600.0" prefWidth="800.0">
    <children>
        <VBox spacing="10.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
              AnchorPane.bottomAnchor="20.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Label text="Customer Service Representative" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="12.5"/>
                        <RowConstraints percentHeight="12.5"/>
                        <RowConstraints percentHeight="12.5"/>
                        <RowConstraints percentHeight="12.5"/>
                    </rowConstraints>
                    <children>
                        <Button text="Admin Login" onAction="#goGoal1" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                maxWidth="Infinity"/>
                        <Button text="View All Customer Orders" onAction="#goGoal2" GridPane.rowIndex="0"
                                GridPane.columnIndex="1" maxWidth="Infinity"/>
                        <Button text="Search Specific Order" onAction="#goGoal3" GridPane.rowIndex="1"
                                GridPane.columnIndex="0" maxWidth="Infinity"/>
                        <Button text="Update Order Status" onAction="#goGoal4" GridPane.rowIndex="1"
                                GridPane.columnIndex="1" maxWidth="Infinity"/>
                        <Button text="View Customer Profile" onAction="#goGoal5" GridPane.rowIndex="2"
                                GridPane.columnIndex="0" maxWidth="Infinity"/>
                        <Button text="Respond to Customer Messages" onAction="#goGoal6" GridPane.rowIndex="2"
                                GridPane.columnIndex="1" maxWidth="Infinity"/>
                        <Button text="Check Order Issue Log" onAction="#goGoal7" GridPane.rowIndex="3"
                                GridPane.columnIndex="0" maxWidth="Infinity"/>
                        <Button text="Logout Panel" onAction="#goGoal8" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                maxWidth="Infinity"/>
                    </children>
                </GridPane>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Back to Login" onAction="#goBackToLogin"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
