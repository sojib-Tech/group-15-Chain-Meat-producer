<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.Ami.Customer.MenuCustomerController"
            prefHeight="600.0" prefWidth="600.0">
    <VBox spacing="10.0" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <Label text="Customer Menu" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        <Button text="Browse Available Products" onAction="#goToBrowseProducts" prefWidth="360.0"/>
        <Button text="Search Specific Product" onAction="#goToSearchProduct" prefWidth="360.0"/>
        <Button text="View Product Details" onAction="#goToViewProductDetails" prefWidth="360.0"/>
        <Button text="Add Product to Cart" onAction="#goToAddToCart" prefWidth="360.0"/>
        <Button text="Checkout &amp; Place Order" onAction="#goToCheckout" prefWidth="360.0"/>
        <Button text="View Past Orders" onAction="#goToViewPastOrders" prefWidth="360.0"/>
        <Button text="Update Personal Information" onAction="#goToUpdatePersonalInfo" prefWidth="360.0"/>
        <Button text="Contact Customer Support" onAction="#goToContactSupport" prefWidth="360.0"/>
        <Separator/>
        <Button text="Back to Login" onAction="#goBack" prefWidth="360.0"/>
    </VBox>
</AnchorPane>
