<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.Ami.Customer.UpdatePersonalInfoController"
            prefHeight="650.0" prefWidth="900.0">
    <VBox spacing="12.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0">
        <fx:define>
            <ToggleGroup fx:id="genderGroup"/>
        </fx:define>
        <Label text="Edit Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <TextField fx:id="fullNameField" promptText="Full name"/>
        <TextField fx:id="phoneNumberField" promptText="Phone number"/>
        <TextField fx:id="addressField" promptText="Address"/>
        <ComboBox fx:id="countryComboBox" promptText="Select country/region"/>
        <HBox spacing="10.0">
            <RadioButton fx:id="maleRadio" text="Male" toggleGroup="$genderGroup"/>
            <RadioButton fx:id="femaleRadio" text="Female" toggleGroup="$genderGroup"/>
        </HBox>
        <DatePicker fx:id="dobDatePicker" promptText="Date of birth"/>
        <Label text="Account Activity" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TableView fx:id="activityTable" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="activityDateColumn" text="Date" prefWidth="200.0"/>
                <TableColumn fx:id="activityDescColumn" text="Activity Description" prefWidth="660.0"/>
            </columns>
        </TableView>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <Button fx:id="saveChangesButton" text="Save Changes"/>
            <Button fx:id="backButton" text="Back to Menu" onAction="#handleBack"/>
        </HBox>
    </VBox>
</AnchorPane>
