<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group15chainmeatproducer.Ami.Customer.SearchSpecificProductController"
            prefHeight="600.0" prefWidth="900.0">
    <VBox spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0">
        <Label text="Search Products" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <HBox spacing="10.0">
            <TextField fx:id="searchField" promptText="Product name or keyword"/>
            <DatePicker fx:id="addedAfterDatePicker" promptText="Added After Date"/>
            <Button fx:id="searchButton" text="Search" onAction="#handleSearch"/>
        </HBox>
        <TableView fx:id="productTable" prefHeight="480.0">
            <columns>
                <TableColumn fx:id="nameColumn" text="Product Name" prefWidth="300.0"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="200.0"/>
                <TableColumn fx:id="dateAddedColumn" text="Date Added" prefWidth="300.0"/>
            </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="backButton" text="Back to Menu" onAction="#handleBack"/>
        </HBox>
    </VBox>
</AnchorPane>
